@model Proyecto_Desarrollo_de_Sistemas.Models.usuario

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Perfil Usuario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="~/js/myScript.js"></script>
    <style>
        table, th, td {
            padding: 15px;
        }

        table {
            border-spacing: 5px;
        }
    </style>

</head>
<body>
    <div class="row content" style="margin-left:40px; margin-right:40px">
        <div class="col-sm-3  border">
            <div class="card" style="width:100%">
                <img class="card-img-top" src="~/images/img_avatar3.png" alt="Card image" style="width:100%">
                <div class="card-body">
                    <h5 class="card-title">@Proyecto_Desarrollo_de_Sistemas.Models.capaDatos.tablamain.Rows[0][1]</h5>
                    <h5 class="card-title">@Proyecto_Desarrollo_de_Sistemas.Models.capaDatos.tablamain.Rows[0][2]</h5>
                    <div>
                        <button id="cancelar" type="button" onclick="disable()" hidden>Cancelar</button>
                        <button id="editar" type="button" onclick="enable()">Editar perfil</button>
                        <button id="salvar" type="button" onclick="disable()" hidden>Salvar Datos</button>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-9 border">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <table>
                    <tr>
                        <td>Perfil de Usuario</td>
                    </tr>
                    <tr>                       
                        <td>Nombre:</td>
                        <td>@Html.TextBoxFor(x => x.nombre, new { placeholder = @Proyecto_Desarrollo_de_Sistemas.Models.capaDatos.tablamain.Rows[0][1], disabled = "disabled", id = "nombre", @class = "form-control" })</td>
                    </tr>
                    <tr>
                        <td>Primer Apellido:</td>
                        <td>@Html.TextBoxFor(x => x.apellido1, new { placeholder = @Proyecto_Desarrollo_de_Sistemas.Models.capaDatos.tablamain.Rows[0][2], disabled = "disabled", id = "apellido1", @class = "form-control" })</td>
                    </tr>

                    <tr>
                        <td>Segundo Apellido:</td>
                        <td>@Html.TextBoxFor(x => x.apellido2, new { placeholder = @Proyecto_Desarrollo_de_Sistemas.Models.capaDatos.tablamain.Rows[0][3], disabled = "disabled", id = "apellido2", @class = "form-control" })</td>
                    </tr>

                    <tr>
                        <td>Correo:</td>
                        <td>@Html.TextBoxFor(x => x.correo, new { placeholder = @Proyecto_Desarrollo_de_Sistemas.Models.capaDatos.tablamain.Rows[0][4], disabled = "disabled", id = "correo", @class = "form-control" })</td>
                    </tr>

                    <tr>
                        <td>Contraseña:</td>
                        <td>@Html.TextBoxFor(x => x.contrasena, new { placeholder = @Proyecto_Desarrollo_de_Sistemas.Models.capaDatos.tablamain.Rows[0][5], disabled = "disabled", id = "contrasena", @Type = "password", @class = "form-control" })</td>
                    </tr>

                    <tr>
                        <td>Teléfono:</td>
                        <td>@Html.TextBoxFor(x => x.telefono, new { placeholder = @Proyecto_Desarrollo_de_Sistemas.Models.capaDatos.tablamain.Rows[0][6], disabled = "disabled", id = "telefono", @class = "form-control" })</td>
                    </tr>

                    <tr>
                        <td>Dirección:</td>
                        <td>@Html.TextBoxFor(x => x.direccion, new { placeholder = @Proyecto_Desarrollo_de_Sistemas.Models.capaDatos.tablamain.Rows[0][7], disabled = "disabled", id = "direccion", @class = "form-control" })</td>
                    </tr>

                </table>
            }
        </div>
    </div>
</body>
</html>