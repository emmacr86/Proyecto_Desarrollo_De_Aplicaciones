<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto Desarrollo de Sistemas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand"style="margin-left:500px" asp-area="" asp-controller="Inicio" asp-action="Index"> <img src="~/tool.png" style="height:30px" />Maridos de Alquiler</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>

    <div class="sidenav">
        <a>
            <img style="height:40px; margin-left:40px" src="~/yellow-user-icon-md.png" />
        </a>
        <a style="color:yellow" class="text-center">Bienvenido!!!</a>
        <a style="color:yellow" class="text-center">@Model.nombre </a>
        <a></a>
        <a href="@Url.Action("Index", "Inicio")"> Inicio</a>
        <a href="#services">Historial</a>
        <a href="#clients">Datos Personales</a>
        <a href="@Url.Action("Index", "About")"> About</a>
        <a href="#clients">Salir</a>
    </div>

    @RenderBody()


    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2020 - Proyecto de Desarrollo de Sistemas - Universidad Hispanoamericana
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
